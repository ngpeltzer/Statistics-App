<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:textAlignment="center"
    android:weightSum="1"
    android:layout_margin="@dimen/default_margin">

    <TextView
        android:layout_margin="@dimen/default_margin"
        android:id="@+id/calculate_expandable_list_group_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="@dimen/text_view_padding_bottom"
        android:paddingLeft="@dimen/text_view_padding_left"
        android:paddingStart="@dimen/text_view_padding_right"
        android:paddingRight="@dimen/text_view_padding_right"
        android:paddingEnd="@dimen/text_view_padding_right"
        android:paddingTop="@dimen/text_view_padding_top"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/title_size"/>

</LinearLayout>